@model eduhub.Models.Qualification

@{
    ViewData["Title"] = "Create";
}


<hr />

<div class="row">

    <form asp-action="Create">
        <fieldset>
            <legend>
                <h1>Educational Qualifications</h1>
                <hr />
            </legend>
            <div class="d-flex">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input name="StudentId" class="form-control" hidden="true" value="@ViewBag.StudentId" />
                <div class="col-3">

                    <label asp-for="Institute" class="control-label col-md"></label>
                    <input asp-for="Institute[0]" class="form-control" />
                    <span asp-validation-for="Institute[0]" class="text-danger"></span>
                </div>

                <div class="col-3">
                    <label asp-for="YearGraduated" class="control-label"></label>
                    <input asp-for="YearGraduated" class="form-control" />
                    <span asp-validation-for="YearGraduated" class="text-danger"></span>
                </div>

                <div class="col-3">
                    <label asp-for="CertificateObtained" class="control-label"></label>
                    <input asp-for="CertificateObtained[0]" class="form-control" />
                    <span asp-validation-for="CertificateObtained[0]" class="text-danger"></span>
                </div>

                <div class="col-3">
                    <label asp-for="Specialty" class="control-label"></label>
                    <input asp-for="Specialty[0]" class="form-control" />
                    <span asp-validation-for="Specialty[0]" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group d-flex-row">
                <input type="submit" value="Add More" class="btn btn-primary" />

                <input type="submit" value="Save and Continue" class="btn btn-primary" />
            </div>

    </form>
    </fieldset>
</div>