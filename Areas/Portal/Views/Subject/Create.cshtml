@model eduhub.Models.Subject

@{
    ViewData["Title"] = "Create";
}
<div class="row card">
    <div class="card-header">
        Create: Subject
    </div>
    <hr />
    <div class="m-auto">

        <form asp-action="Create">
            <div class="d-flex mb-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <select asp-for="QualificationId" hidden="true" aria-hidden="true"
                        aria-selected="@ViewBag.QualificationId" class="form-control"
                        asp-items="ViewBag.QualificationId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Subject1" class="control-label"></label>
                    <input asp-for="Subject1" class="form-control" />
                    <span asp-validation-for="Subject1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grade" class="control-label"></label>
                    <input asp-for="Grade" class="form-control" />
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExamType" class="control-label"></label>
                    <input asp-for="ExamType" class="form-control" />
                    <span asp-validation-for="ExamType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
